
<section id="taskpage">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 offset-md-3 ">
        <div class="card">
          <h1 class="card-header text-center"><%= current_user.username%>'s Task</h1>
           <div class="card-body <%= current_user.house.house_name %>">
              <% @tasks.each do |task| %>
                <span class=<%= task.house.house_name %> <%= task.completed ? "completed" : "required" %>>
                   <!--  is there a cleaner way to do this? helper?-->
                    <li class="taskbar">  <a href="/tasks/<%= task.id %>"> <%= task.content%></a>
                      <form class="icon tasktools" action="/tasks/<%= task.id %>" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="tasktools far fa-trash-alt"></button>
                      </form>
                      <a href="/tasks/<%= task.id%>/edit" class="tasktools fas fa-cog fa-spin"></a>
                      <a class="tasktools far fa-square"></a> <!-- this will be for description -->
                    </li>
           
                </span>
              <% end %>
              <a href="/tasks/new">
                <div class="text-center">
                  <button type="button" class="btn btn-outline-primary <%= current_user.house.house_name %>">Make a new Task!</button>
                </div>
              </a>
          </div>
        </div>
      </div><!---#task-->
    </div> <!--- .row-->
  </div> <!--- .container-->
</section>
